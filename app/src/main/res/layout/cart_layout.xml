<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutCart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/cartProductImage"
            android:layout_width="167dp"
            android:layout_height="216dp"
            android:layout_margin="1dp"
            android:background="#03A9F4" />

        <LinearLayout
            android:layout_width="232dp"
            android:layout_height="222dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cartProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Product Description"
                android:textAlignment="center"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/deductCartQuantity"
                    android:layout_width="81dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#00F8F6F6"
                    app:srcCompat="@drawable/ic_remove_circle_black_24dp"></ImageButton>

                <TextView
                    android:id="@+id/quantityText"
                    android:layout_width="75dp"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="18sp"
                    android:textStyle="bold"></TextView>

                <ImageButton
                    android:id="@+id/incrementCartQuantity"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00F5F2F2"
                    app:srcCompat="@drawable/ic_add_circle_black_24dp"></ImageButton>

            </LinearLayout>

            <ImageButton
                android:id="@+id/removeCartItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00F1F1F1"
                app:srcCompat="@drawable/ic_delete_black_24dp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="?android:attr/listDivider" />


</LinearLayout>
